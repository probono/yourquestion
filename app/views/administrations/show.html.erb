<div class="content frame">

<div class="section-01">
  <div class="question column-01 toLeft">
    <h1><%= @administration.name %></h1>
    <p><%= @administration.description %></p>
    <div class="question-tags">
      <ul>
        <% @administration.departments.each do |d|%>
          <li><%= link_to d.name, administration_department_path(@administration, d)%></li>
        <% end %>
      </ul>
    </div>
  </div>
  <!--/question-->
  <div class="people column-02 toRight">
    <p class="number-people"><em><span><%= @administration.questions.sent.size %></span> preguntas enviadas, <span><%= @administration.questions.answered.size %></span> contestadas</em></p>
    
    <p class="accessible">Estadística de <%= administration_link(@administration) %>:</p>
      <p>El tiempo medio de respuesta de <%= administration_link(@administration) %> es de <span><%= @administration.average_response_time %> días</span></p>
      <p>La media general está en <span><%= average_response_time %> días</span></p>
    
  </div>
  <!--/people-->
  <div class="clear"></div>
</div>
<!--/section-01-->

<%= render :partial => '/questions/list', :locals => {:questions => @administration.questions.sent}%>


</div>